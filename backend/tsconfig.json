{
  "compilerOptions": {
    "target": "ES2020", // В какую версию JS компилировать
    "module": "commonjs", // Система модулей (для Node.js)
    "lib": ["ES2020"], // Доступные API
    "outDir": "./dist", // Куда складывать скомпилированные файлы
    "rootDir": "./src", // Где искать исходники
    "strict": true, // Строгая проверка типов
    "esModuleInterop": true, // Совместимость с CommonJS
    "skipLibCheck": true, // Пропускать проверку типов в библиотеках
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true, // Можно импортировать JSON
    "moduleResolution": "node" // Как искать модули
  },
  "include": ["src/**/*"], // Какие файлы компилировать
  "exclude": ["node_modules", "dist"]
}
